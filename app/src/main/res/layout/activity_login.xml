<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context=".login">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:paddingRight="30dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/main" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/convergence"
        android:padding="15dp"
        android:text="Lets share problems and find help or help someone who in problem. Helping someone or let someone help you will always bring happiness. So lets get started."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:paddingBottom="100dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/button_owner"
            android:layout_width="250dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/whitebutton"
            android:fontFamily="sans-serif"
            android:paddingVertical="12dp"
            android:paddingHorizontal="40dp"
            android:text="GET STARTED"
            android:drawableEnd="@drawable/arrow2"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />


    </LinearLayout>


</LinearLayout>
